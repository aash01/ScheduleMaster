<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tinohacks.connectfinal.CreateSchedule">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="29dp"
        android:text="Time"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/time1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/time"
        android:layout_alignLeft="@+id/time"
        android:layout_alignRight="@+id/time"
        android:layout_alignStart="@+id/time"
        android:layout_below="@+id/time"
        android:layout_marginTop="34dp"
        android:text="1 - 2 P.M." />

    <TextView
        android:id="@+id/time2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/time1_2"
        android:layout_alignLeft="@+id/time1_2"
        android:layout_alignRight="@+id/time1_2"
        android:layout_alignStart="@+id/time1_2"
        android:layout_below="@+id/time1_2"
        android:layout_marginTop="24dp"
        android:text="2 - 3 P.M." />

    <TextView
        android:id="@+id/time3_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="3 - 4 P.M."
        android:layout_below="@+id/time2_3"
        android:layout_alignLeft="@+id/time2_3"
        android:layout_alignStart="@+id/time2_3"
        android:layout_alignRight="@+id/time2_3"
        android:layout_alignEnd="@+id/time2_3" />

    <TextView
        android:id="@+id/time4_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/time3_4"
        android:layout_alignLeft="@+id/time3_4"
        android:layout_alignRight="@+id/time3_4"
        android:layout_alignStart="@+id/time3_4"
        android:layout_below="@+id/time3_4"
        android:layout_marginTop="24dp"
        android:text="4 - 5 P.M." />

    <TextView
        android:id="@+id/time5_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 - 6 P.M."
        android:layout_below="@+id/time4_5"
        android:layout_alignLeft="@+id/time4_5"
        android:layout_alignStart="@+id/time4_5"
        android:layout_marginTop="24dp"
        android:layout_alignRight="@+id/time4_5"
        android:layout_alignEnd="@+id/time4_5" />

    <EditText
        android:id="@+id/activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/time1_2"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_toRightOf="@+id/time"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Activity" />
</android.widget.RelativeLayout>
